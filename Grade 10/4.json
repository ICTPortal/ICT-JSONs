        {
          "id": "1.6",
          "title": "Selection",
          "content": {
            "structures": [
              {
                "type": "IF...THEN",
                "desc": "Executes statement if condition true.",
                "code": "Var N: integer;\nBegin\n\tReadln(N);\n\tIf N > 0 then\n\t\tWriteln(N);\nEnd."
              },
              {
                "type": "IF...THEN...ELSE",
                "desc": "Executes one of two statements based on condition.",
                "code": "Var N1, N2, Large: integer;\nBegin\n\tReadln(N1, N2);\n\tIf N1 > N2 then Large := N1 else Large := N2;\nEnd."
              },
              {
                "type": "NESTED IF",
                "desc": "If statements within If statements.",
                "code": "If M >= 75 then Grade := 'A'\nElse If M >= 65 then Grade := 'B'\nElse ..."
              },
              {
                "type": "CASE",
                "desc": "Multiple discrete values of a variable.",
                "code": "Case Marks of\n\t0..34: Grade := 'W';\n\t35..49: Grade := 'S';\n...\nEnd;"
              }
            ]
          }
        },
        {
          "id": "1.7",
          "title": "Repetition",
          "content": {
            "structures": [
              {
                "type": "FOR...DO",
                "desc": "Known number of iterations (Count Up).",
                "code": "for count := 1 to 10 do writeln(count);"
              },
              {
                "type": "FOR...DOWNTO",
                "desc": "Known number of iterations (Count Down).",
                "code": "for count := 10 downto 1 do writeln(count);"
              },
              {
                "type": "WHILE...DO",
                "desc": "Condition checked at start. Repeats while true.",
                "code": "while count <= 10 do begin ... end;"
              },
              {
                "type": "REPEAT...UNTIL",
                "desc": "Condition checked at end. Repeats until true.",
                "code": "repeat ... until count > 5;"
              }
            ]
          }
